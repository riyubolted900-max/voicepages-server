# VoicePages Server Configuration
# Copy to .env and adjust values

# Server
HOST=0.0.0.0
PORT=9000

# TTS Backend: "mac_speech" (default, no setup) or "kokoro" (better quality)
TTS_BACKEND=mac_speech

# Kokoro TTS (only if TTS_BACKEND=kokoro)
KOKORO_URL=http://localhost:8000

# Ollama LLM (for character detection)
OLLAMA_URL=http://localhost:11434
LLM_MODEL=minimax-m2.5:cloud

# Audio settings
AUDIO_SAMPLE_RATE=24000
AUDIO_SPEED=1.0
MAX_CHUNK_SIZE=5000

# Optional: API password (leave empty for no auth)
API_PASSWORD=
MINIMAX_API_KEY=your_api_key_here
MINIMAX_MODEL=MiniMax-Text-01
